<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.pilaipiwang.pui.widget.loading.PUILoadingView
        android:id="@+id/v_pui_default_multistates_loading_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:color="@color/pui_config_color_gray_3"
        app:pui_loading_view_size="32dp" />

    <TextView
        android:id="@+id/tv_pui_default_multistates_loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="加载中，请稍后..."
        android:textSize="14sp" />

</LinearLayout>
