<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- PUITopBar -->
    <declare-styleable name="PUITopBar">
        <attr name="pui_topbar_title_gravity" format="enum">
            <enum name="left_center" value="19" />
            <enum name="center" value="17" />
        </attr>
        <attr name="android:layout_width" />
        <attr name="android:background" />
        <attr name="pui_topbar_separator_color" format="color" />
        <attr name="pui_topbar_separator_height" format="dimension" />
        <!--titile-->
        <attr name="pui_topbar_title_container_padding_hor" format="dimension" />
        <attr name="pui_topbar_title_text_size" format="dimension" />
        <attr name="pui_topbar_title_text_color" format="color" />
        <attr name="pui_topbar_title_text" format="string" />
        <attr name="pui_topbar_title_with_subtitle_text_size" format="dimension" />
        <attr name="pui_topbar_subtitle_text_size" format="dimension" />
        <attr name="pui_topbar_subtitle_text_color" format="color" />
        <!--side-->
        <attr name="pui_topbar_left_back_drawable_id" format="reference" />
        <attr name="pui_topbar_left_back_need_show" format="boolean" />
        <attr name="pui_topbar_side_imagebutton_width" format="dimension" />
        <attr name="pui_topbar_side_imagebutton_height" format="dimension" />
        <attr name="pui_topbar_side_imagebutton_padding" format="dimension" />
        <attr name="pui_topbar_side_imagebutton_margin_hor" format="dimension" />
        <attr name="pui_topbar_side_textview_text_size" format="dimension" />
        <attr name="pui_topbar_side_textview_text_color" format="color" />
        <attr name="pui_topbar_side_textview_padding_hor" format="dimension" />
        <!--custom-->
        <attr name="pui_topbar_custom_view_layout_id" format="reference" />
        <attr name="pui_topbar_custom_view_padding_hor" format="dimension" />
    </declare-styleable>

    <declare-styleable name="PUIDefaultMultiStatesLayout">
        <attr name="pui_default_multistates_empty_resId" format="reference" />
        <attr name="pui_default_multistates_netoff_resId" format="reference" />
        <attr name="pui_default_multistates_error_resId" format="reference" />
        <attr name="pui_default_multistates_empty_text" format="string" />
        <attr name="pui_default_multistates_netoff_text" format="string" />
        <attr name="pui_default_multistates_error_text" format="string" />
        <attr name="pui_default_multistates_action_text" format="string" />
        <attr name="pui_default_multistates_is_action_show" format="boolean" />
    </declare-styleable>

    <!-- Dialog title -->
    <declare-styleable name="PUIDialogTitleTvCustomDef">
        <attr name="pui_paddingBottomWhenNotContent" format="dimension" />
    </declare-styleable>

    <!-- Dialog message -->
    <declare-styleable name="PUIDialogMessageTvCustomDef">
        <attr name="pui_paddingTopWhenNotTitle" format="dimension" />
    </declare-styleable>

    <!-- Dialog Action container -->
    <declare-styleable name="PUIDialogActionContainerCustomDef">
        <attr name="pui_dialog_action_container_justify_content" format="enum">
            <enum name="start" value="0" />
            <enum name="end" value="1" />
            <enum name="stretch" value="2" />
            <enum name="custom" value="3" />
        </attr>
        <attr name="pui_dialog_action_container_custom_space_index" format="integer" />
        <attr name="pui_dialog_action_height" format="dimension" />
        <attr name="pui_dialog_action_space" format="dimension" />
    </declare-styleable>

    <!-- loading widget -->
    <declare-styleable name="PUILoadingView">
        <attr name="pui_loading_view_size" format="dimension" />
        <attr name="android:color" />
    </declare-styleable>

</resources>
