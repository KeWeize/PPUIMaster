        <attr name="pui_disableAlpha" />
    </declare-styleable>

    <declare-styleable name="PUIRoundTextView">
        <attr name="pui_borderColor" />
        <attr name="pui_borderWidth" />
        <attr name="pui_isRadiusAdjustBounds" />
        <attr name="pui_radius" />
